function yg_restaurant_preprocess_views_view_unformatted(&$variables) {
  $variables['is_front'] = Drupal::service('path.matcher')->isFrontPage();
}

function yg_intechnic_preprocess_menu(&$variables, $hook) {
  if ($hook == 'main') { // We're doing that for main menu.
    // Get the current path.
    $current_path = \Drupal::request()->getRequestUri();
    $items = $variables['items'];
    foreach ($items as $key => $item) {
      // If path is current_path, set active to li.
      if ($item['url']->toString() == $current_path) {
        // Add active link.
        $variables['items'][$key]['attributes']['class'] = 'active';
      }
    }
  }
}

function yg_intechnic_theme_suggestions_page_alter(array &$suggestions, array $variables) {
  // Get Request Object.
  $request = \Drupal::request();
  // If there is HTTP Exception..
  if ($exception = $request->attributes->get('exception')) {
    // Get the status code.
    $status_code = $exception->getStatusCode();
    if (in_array($status_code, array(403, 404))) {
      $suggestions[] = 'page__' . $status_code;
    }
  }
}

